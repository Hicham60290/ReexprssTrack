# ===========================================
# ENVIRONMENT
# ===========================================
NODE_ENV=development

# ===========================================
# SERVER
# ===========================================
HOST=0.0.0.0
PORT=3000

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL="postgresql://postgres:password@localhost:5432/reexpresstrack?schema=public"

# ===========================================
# REDIS
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# JWT
# ===========================================
# Générer avec: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production

# ===========================================
# CORS
# ===========================================
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# ===========================================
# STRIPE
# ===========================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# ===========================================
# MINIO (Stockage S3-compatible)
# ===========================================
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=reexpresstrack
MINIO_USE_SSL=false

# ===========================================
# EMAIL (SMTP)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@reexpresstrack.com

# ===========================================
# 17TRACK API
# ===========================================
TRACK17_API_KEY=your-17track-api-key

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=info

# ===========================================
# FRONTEND URL (pour emails, redirections...)
# ===========================================
FRONTEND_URL=http://localhost:5173
